<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="12dp"
    android:layout_marginTop="8dp"
    android:paddingLeft="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/door"
        app:srcCompat="@drawable/ic_door_open"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/door"
        android:layout_marginRight="8dp"
        tools:text="عماد جان عزیز"
        android:fontFamily="@font/app_font"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStatus"
        android:textColor="@color/grey_3"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="حاضر"
        android:fontFamily="@font/app_font"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEnter"
        android:textColor="@color/grey_3"
        android:layout_marginRight="8dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintRight_toLeftOf="@id/door"
        tools:text="ورود: ساعت 12"
        android:fontFamily="@font/app_font"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvExit"
        android:textColor="@color/grey_3"
        android:textSize="14sp"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintRight_toLeftOf="@id/tvEnter"
        tools:text="خروج: 12:35"
        android:fontFamily="@font/app_font"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExit"
        android:layout_marginTop="8dp"
        android:background="#bfbfbf"
        />

</androidx.constraintlayout.widget.ConstraintLayout>