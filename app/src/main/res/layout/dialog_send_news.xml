<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvMessage"
        android:text="ارسال اطلاعیه"
        android:fontFamily="@font/app_font"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:fontFamily="@font/app_font"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="متن پیام را بنویسید..."
        android:textColorHint="#bfbfbf"
        android:textColor="@color/grey_3"
        android:gravity="top|right"
        android:padding="14dp"
        android:lines="10"
        android:id="@+id/etMessage"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_bordered_primary_dark_mini"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSend"
        app:layout_constraintTop_toBottomOf="@id/etMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_primary"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="ارسال از طریق پیام و نوتیفیکیشن"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/app_font"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:indeterminate="true"
        android:indeterminateTint="@color/primary_dark"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>