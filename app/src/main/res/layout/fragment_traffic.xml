<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:id="@+id/root"
    android:clickable="true"
    android:focusable="true"
    tools:context=".TrafficFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="سالن ورود"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:textColor="#555"
        android:textSize="17sp"
        android:fontFamily="@font/app_font"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:text="نام کاربر"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvTitle"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:textColor="@color/primary_very_dark"
        android:textSize="16sp"
        android:fontFamily="@font/app_font"
        android:layout_marginTop="19dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/news"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_bell"
        android:padding="20dp"
        app:tint="@color/primary_dark"
        android:tint="@color/primary_dark"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        app:layout_constraintRight_toRightOf="@id/news"
        app:layout_constraintBottom_toBottomOf="@id/news"
        android:background="@drawable/oval_red"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/timebox"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/lav_thumbUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_keycdn"
        android:tint="#666"
        android:alpha="0.05"
        />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="46sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="32dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:fontFamily="@font/app_font"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivFingerprint"
        android:text="59" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_thumbUp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEntered"
        app:layout_constraintBottom_toTopOf="@id/enterSlideView"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/clock"
        android:tint="@color/primary"
        tools:visibility="visible"
        app:lottie_loop="true"
        app:lottie_speed="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEntered"
        app:layout_constraintTop_toBottomOf="@id/news"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="شما در ساعت 12:35 وارد شدید\nبرای خروج دکمه اثر انگشت را نگه دارید"
        tools:visibility="visible"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_sign_out_dark"
        android:drawableTint="@color/white"
        android:textSize="16sp"
        android:textColor="@color/secondary_very_light"
        android:fontFamily="@font/app_font"
        android:background="@drawable/rounded_white_box"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        />

    <FrameLayout
        android:id="@+id/flEdge"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvEntered"
        android:background="@drawable/bottom_rounded_purple"
        app:layout_constraintRight_toRightOf="@id/tvEntered"
        app:layout_constraintLeft_toLeftOf="@id/tvEntered"
        android:layout_marginTop="-8dp"
        android:visibility="gone"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress"
        android:layout_width="190dp"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEntered"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/load_and_done"
        android:tint="@color/primary"
        app:layout_constraintRight_toRightOf="@id/ivFingerprint"
        app:layout_constraintBottom_toBottomOf="@id/ivFingerprint"
        app:layout_constraintLeft_toLeftOf="@id/ivFingerprint"
        app:layout_constraintTop_toTopOf="@id/ivFingerprint"
        app:lottie_loop="false"
        app:lottie_speed="1.35" />

    <TextView
        android:id="@+id/tvLocationSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingRight="16dp"
        android:gravity="right|center_vertical"
        android:background="@drawable/rounded_white"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/flEdge"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/app_font"
        android:text="در صورت پیدا نشدن موقعیت کلیک کنید"
        android:drawableLeft="@drawable/ic_maps"
        android:textColor="#262626"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tvCompanyLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:visibility="visible"
        android:gravity="right|center_vertical"
        android:background="@drawable/rounded_white"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/tvLocationSearch"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:paddingRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/app_font"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="برای نمایش مکان شرکت کلیک کنید"
        android:drawableLeft="@drawable/ic_maps"
        android:paddingLeft="12dp"
        android:textColor="#262626"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFingerprint"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_fingerprint_primary"
        android:scaleType="centerInside"
        android:background="@drawable/button_state"
        android:padding="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="44dp"
        android:visibility="gone"
        />

    <ng.max.slideview.SlideView
        android:id="@+id/enterSlideView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="44dp"
        app:sv_buttonBackgroundColor="#00000000"
        app:sv_buttonImage="@drawable/ic_fingerprint_primary_mini"
        app:sv_slideBackgroundColor="#f1f1f1"
        app:sv_slideText="@string/swipe_to_enter"
        app:sv_slideTextColor="#555"
        app:sv_slideTextSize="15sp"
        app:sv_animateSlideText="true"
        app:sv_reverseSlide="false"
        app:sv_strokeColor="@color/primary_very_dark"
        app:sv_buttonImageDisabled="@drawable/ic_fingerprint_primary_mini_disabled" />

    <ng.max.slideview.SlideView
        android:id="@+id/exitSlideView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="44dp"
        android:visibility="gone"
        app:sv_buttonBackgroundColor="#00000000"
        app:sv_buttonImage="@drawable/finger_reverse"
        app:sv_slideBackgroundColor="#f1f1f1"
        app:sv_slideText="@string/swipe_to_exit"
        app:sv_slideTextColor="@color/primary_dark"
        app:sv_slideTextSize="15sp"
        app:sv_animateSlideText="true"
        app:sv_reverseSlide="true"
        app:sv_strokeColor="@color/primary_very_dark"
        app:sv_buttonImageDisabled="@drawable/ic_fingerprint_primary_mini_disabled" />

</androidx.constraintlayout.widget.ConstraintLayout>