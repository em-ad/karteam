<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:clickable="true"
    android:focusable="true"
    tools:context=".TrafficFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="سالن ورود"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@color/primary_dark"
        android:textSize="18sp"
        android:fontFamily="@font/app_font"
        android:layout_marginTop="18dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/lav_thumbUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/time_box"
        android:alpha="0.2"
        android:tint="@color/primary_very_dark"
        />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="46sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:fontFamily="@font/app_font"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivFingerprint"
        android:text="59" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_thumbUp"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEntered"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/pendulum"
        android:tint="@color/primary"
        app:lottie_loop="true"
        app:lottie_speed="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEntered"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="شما در ساعت 12:35 وارد شدید\nبرای خروج دکمه اثر انگشت را نگه دارید"
        tools:visibility="visible"
        android:visibility="invisible"
        android:textSize="16sp"
        android:textColor="@color/secondary_very_light"
        android:fontFamily="@font/app_font"
        android:background="@drawable/rounded_white_box"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        />

    <FrameLayout
        android:id="@+id/flEdge"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvEntered"
        android:background="@drawable/bottom_rounded_purple"
        app:layout_constraintRight_toRightOf="@id/tvEntered"
        app:layout_constraintLeft_toLeftOf="@id/tvEntered"
        android:layout_marginTop="-8dp"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFingerprint"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_fingerprint_primary"
        android:scaleType="centerInside"
        android:background="@drawable/button_state"
        android:padding="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="44dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress"
        android:layout_width="190dp"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEntered"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/load_and_done"
        android:tint="@color/primary"
        app:layout_constraintRight_toRightOf="@id/ivFingerprint"
        app:layout_constraintBottom_toBottomOf="@id/ivFingerprint"
        app:layout_constraintLeft_toLeftOf="@id/ivFingerprint"
        app:layout_constraintTop_toTopOf="@id/ivFingerprint"
        app:lottie_loop="false"
        app:lottie_speed="1.35" />

</androidx.constraintlayout.widget.ConstraintLayout>