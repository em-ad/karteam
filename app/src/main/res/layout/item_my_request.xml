<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/secondary_very_light"
    android:background="#00ffffff"
    android:paddingTop="4dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivType"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_vacation_primary_dark"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_font"
        android:textColor="@color/grey_3"
        app:layout_constraintRight_toLeftOf="@id/ivType"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        tools:text="مرخصی استعلاجی"
        android:layout_marginRight="14dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_font"
        android:textSize="12sp"
        android:gravity="right|center_vertical"
        android:layout_marginRight="14dp"
        app:layout_constraintRight_toLeftOf="@id/ivType"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:drawableRight="@drawable/ic_calendar_check_primary"
        tools:text="12/02/1400"
        android:textColor="@color/grey_6"
        android:drawablePadding="6dp"
        />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_font"
        android:textSize="12sp"
        android:gravity="right|center_vertical"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@id/tvDate"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:drawableRight="@drawable/ic_calendar_alt"
        tools:text="12/02/1400"
        android:textColor="@color/grey_6"
        android:drawablePadding="6dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_pending"
        android:alpha="0.8"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>